<div id="app-notification" class="tw-fixed tw-top-6 tw-left-1/2 tw-transform tw--translate-x-1/2 tw-z-50 tw-max-w-[90vw] sm:tw-max-w-[70vw] md:tw-max-w-[50vw] lg:tw-max-w-[40vw] tw-transition-opacity tw-duration-300 tw-cursor-pointer">
  <div class="tw-relative <%= type == :notice ? 'tw-bg-emerald-50 tw-border-l-4 tw-border-emerald-500' : 'tw-bg-red-50 tw-border-l-4 tw-border-red-500' %> tw-rounded-lg tw-shadow-lg tw-p-4 tw-pr-10 tw-flex tw-items-center tw-gap-3">
    <div class="tw-flex-shrink-0">
      <% if type == :notice %>
        <svg class="tw-w-5 tw-h-5 tw-text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <svg class="tw-w-5 tw-h-5 tw-text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <div class="tw-flex-1 tw-min-w-0">
      <span class="<%= type == :notice ? 'tw-text-emerald-800' : 'tw-text-red-800' %> tw-text-sm tw-font-medium tw-leading-snug">
        <%= message %>
      </span>
    </div>
  </div>
</div>
