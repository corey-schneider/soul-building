  </div>
</div>

<br><br>

<div class="container">
  <h1>Some of our recent work:</h1>
  <br>
  <div class="row">
    <% Post.most_recent(3).each do |post| %>
      <%= render partial: 'shared/post_card', locals: { post: post } %>
    <% end %>
  </div>
</div>

