<h1>Posts</h1>

<div class="row">
	<% @posts.each do |post| %>
    	<%= render partial: 'shared/post_card', locals: { post: post } %>
	<% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "New post", new_post_path, class: "fas fa-plus btn btn-primary" %> | 
<% end %>

<%= link_to ' Back to Portfolio', portfolio_path, class: "fas fa-backward btn btn-primary" %>