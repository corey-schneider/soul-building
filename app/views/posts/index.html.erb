<h1>Posts</h1>

<div class="row">
	<% @posts.each do |post| %>
    	<%= render partial: 'shared/post_card', locals: { post: post } %>
	<% end %>
</div>

<% if user_signed_in? %>
  <%= link_to new_post_path, class: "btn btn-primary" do %>
    <i class="fas fa-plus"></i> New post
  <% end %> | 
<% end %>

<%= link_to portfolio_path, class: "btn btn-primary" do %>
  <i class="fas fa-backward"></i> Back to Portfolio
<% end %>
