<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<% if @post.main_photo.attached? %>
    <img src="<%=(url_for(@post.main_photo))%>">
<% end %>

<ul>
    <li><%= link_to "Edit", edit_post_path(@post) %></li>
    <li><%= link_to "Destroy", post_path(@post),
        method: :delete,
        data: { confirm: "Are you sure you wish to delete this? The data CANNOT be recovered!" } %></li>
    <li><%= link_to "Go back", posts_path %></li>
</ul>